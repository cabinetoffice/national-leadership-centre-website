<footer class="footer-main">
	<div class="container container--wide">
		<nav aria-label="Find out more" class="footer-main__nav">
			<ul>
				{%- for footer in collections.footerNav -%}
				<li>
					<a href="{{ footer.url | url }}"{% if footer.url == page.url %} data-current="current item" class="current"{% endif %}>{{ footer.data.navtitle }}</a>
				</li>
				{%- endfor -%}
			</ul>
		</nav>
		<nav aria-labelledby="footer-social-menu" class="footer-main__social">
			<h2 id="footer-social-menu" class="footer-main__social__heading">Follow the NLC:</h2>
			<ul>
				<li>
					<a target="_blank" href="https://twitter.com/NLC_HQ">
						<img src="/static/img/twitter.svg" alt="Follow The National Leadership Centre on Twitter" />
					</a>
				</li>
				<li>
					<a target="_blank" href="https://www.linkedin.com/company/national-leadership-centre/">
						<img viewBox="20, 20" src="/static/img/linkedin.svg" alt="Visit the The National Leadership Centre on Linkedin page" />
					</a>
				</li>
			</ul>
		</nav>
		<a class="footer-main__crest__wrapper" href="https://www.nationalarchives.gov.uk/information-management/re-using-public-sector-information/uk-government-licensing-framework/crown-copyright/" target="_blank">
			<div class="footer-main__crest">
				<img src="/static/img/govuk-crest-2x.png" alt="Government crest" />
				<p><span>&copy;</span>Crown copyright</p>
			</div>
		</a>
	</div>
</footer>

<section aria-label="Cookie banner" class="cookie-bar" id="cookie-bar-bottom">
	<div class="container">
		<p>The National Leadership Centre uses cookies to make this site simpler.<a href="/cookies" >Find out more about cookies</a></p>
		<button class="cookie-bar__accept" id="cookie-hide">Accept cookies</button>
	</div>
